@model IEnumerable<Perfiles_S.A.Models.Departamentos>

@{
    ViewBag.Title = "Agregar Departamento";
}

<h2>Departamento</h2>

<head>
    <link rel="stylesheet" href="~/Content/departamentos-index.css" />
</head>

<!-- Botón de Regresar -->
<a href="https://localhost:44319" class="btn-back">Regresar</a>

<br />
<br />

<p>
    @Html.ActionLink("Crear Nuevo", "Create", null, new { @class = "create-btn" })
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreDepartamento)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreDepartamento)
            </td>
            <td class="action-links">
                @Html.ActionLink("Editar", "Edit", new { id = item.DepartamentoID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.DepartamentoID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.DepartamentoID })
            </td>

        </tr>
    }

</table>
